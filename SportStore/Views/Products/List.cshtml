@model ProductsListViewModel

@{
    ViewData["Title"] = "List";
}

<h2>Products List</h2>

@foreach (Product p in Model.Products){ //Para cada produto p contido no modelo, percorre a lista de produtos
    <div class="well well-sm">
        <h3>@p.Name</h3>
        <p>@p.Description</p>
        <h4>@p.Price.ToString("c")</h4>
    </div>

    <hr />
}

<div page-model="@Model.PagingInfo" page-action="List"></div>

